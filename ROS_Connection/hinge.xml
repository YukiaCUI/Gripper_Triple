<mujoco model="simple_joint">
    <compiler angle="degree"/>
    <option timestep="0.01"/>

    <worldbody>
        <!-- 固定基座 -->
        <body name="base" pos="0 0 0">
            <geom type="box" size="0.3 0.3 0.3" rgba="0.2 0.2 0.2 1"/>
            
            <!-- 旋转关节 -->
            <body name="link" pos="0 0 0.3">
                <joint name="hinge" type="hinge" axis="0 0 1" pos="0 0 0"/>
                <geom type="capsule" fromto="0 0 0  0 0 0.2" size="0.05" rgba="0.53 0.81 0.92 1"/>
                <body name="indicator" pos="0 0.1 0.2">
                    <geom type="box" size="0.02 0.1 0.005" rgba="0 0 1 1"/>
                </body>
            </body>
        </body>
    </worldbody>
</mujoco>
